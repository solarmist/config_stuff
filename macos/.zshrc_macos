test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

if [[ $TERM_PROGRAM = 'iTerm.app' ]] && [[ $STY = '' ]];
then
    printf '\033]1337;ClearScrollback\a'
    fullscreen ~/.startup
    sleep $(( $(gifd -q ~/.startup) + 0.5 ))
    printf '\033]1337;ClearScrollback\a'
fi
